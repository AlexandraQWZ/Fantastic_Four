<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <!-- RESPONSIVE -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Akshar:wght@100;200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- STYLE -->
    <link rel="stylesheet" href="/style.css" />

    <!-- ICONS -->
    <script
      src="https://kit.fontawesome.com/ec41095585.js"
      crossorigin="anonymous"
    ></script>

    <!-- SITE TITLE -->
    <title>FANTASTIC FOUR â€“ Coding Practice Hub</title>
  </head>

  <body>
    <!-- ********* HEADER ********* -->
    <div class="container-header">
      <header>
        <nav>
          <a href="https://github.com/AlexandraQWZ/Fantastic_Four" target="_blank">
            <img src="img/Github@2x.svg" class="logo" alt="Github logo" />
          </a>
        </nav>

        <div class="flex-header">
          <div class="main-title">
            <h1 style="color:#00e5ff; text-shadow:0 0 15px #15ff00;">
              FANTASTIC FOUR TERBAIK
            </h1>
            <p style="color:#a4f7ff; margin-top:1rem;">
              Your Neon-Coded Learning Playground
            </p>
          </div>

          <div>
            <img
              src="img/logo-blue.png" width="100" height="auto"
              class="main-title-logo"
              alt="Fantastic Four Logo"
            />
            <img src="img/Github@2x.svg" class="logo" alt="Github logo" />
          </div>

          <p class="header-about">
            //  Explore coding concepts, learn interactively,  
            and store your own custom questions  //
          </p>
        </div>
      </header>

      <!-- ********* QUIZ SECTION ********* -->
      <main>
        <section class="content">
          <p class="content-p">
            WHAT DO YOU  
            WANT TO LEARN  
            TODAY?
          </p>

          <li class="show-modal">
            <button class="html">
              <img src="img/cat.svg" class="animal-icons" alt="icon" />
            </button>

            <button class="css">
              <img src="img/shark.svg" class="animal-icons" alt="icon" />
            </button>

            <button class="js">
              <img src="img/llama.svg" class="animal-icons" alt="icon" />
            </button>

            <button class="node">
              <img src="img/deer.svg" class="animal-icons" alt="icon" />
            </button>

            <button class="behavorial">
              <img src="img/duck.svg" class="animal-icons" alt="icon" />
            </button>

            <button class="my-question">
              <img src="img/beaver.svg" class="animal-icons" alt="icon" />
            </button>
          </li>

          <!-- ********* MODAL ********* -->
          <div class="modal hidden">
            <h3 class="title" style="color:#00e5ff; text-shadow:0 0 10px #00e5ff;">
              Random Question
            </h3>

            <p id="tipParagraph"></p>

            <img
              class="surprise-image"
              src=""
              alt="Surprise cute animal"
            />

            <li class="flex-modal-btn">
              <div class="btn-break">
                <button class="save-modal">
                  <img src="img/heart.svg" class="save" alt="Save" />
                </button>
              </div>

              <div class="btn-break">
                <button class="more-modal">More!</button>
              </div>

              <div class="btn-break">
                <button class="close-modal">
                  <img src="img/x2.svg" class="close" alt="Close" />
                </button>
              </div>
            </li>
          </div>

          <div class="overlay hidden"></div>
        </section>
      </main>
    </div>

    <!-- ********* ADD QUESTION SECTION ********* -->
    <section class="add-a-question" id="redirect">
      <section class="add">
        <h4 class="about-why">ADD YOUR QUESTION</h4>

        <form action="/" method="POST" class="add-q-form">
          <select name="category" id="add-q-section">
            <option value="Html">CATEGORY</option>
            <option value="HTML/CSS">HTML/CSS</option>
            <option value="JS">JAVASCRIPT</option>
            <option value="FRAMEWORKS">FRAMEWORKS</option>
            <option value="BACKEND">BACKEND</option>
            <option value="BEHAVORIAL">BEHAVIORAL</option>
            <option value="OTHER">OTHER</option>
          </select>

          <textarea
            class="question-field"
            name="content"
            placeholder="Type your question..."
            wrap="soft"
          ></textarea>

          <input type="submit" class="submit-q" value="ADD" />
        </form>
      </section>

      <img src="img/bg-ask-cat.jpg" class="cat-photo" alt="cat photo" />
    </section>

    <!-- ********* MY QUESTIONS SECTION ********* -->
    <section class="render">
      <h4 class="about-why">YOUR SAVED QUESTIONS</h4>

      <ul class="render-my-questions">
        <% items.forEach(details => { %>
        <li class="my-q-list">
          <div class="question-content-wrapper">
            <div class="my-q-list-category">
              <%= details.category %><span>:</span>
            </div>

            <div class="my-q-list-content">
              <%= details.content %>
            </div>

            <small class="question-date">
              Added:
              <%= new Date(details.created_at).toLocaleDateString('id-ID') %>
            </small>
          </div>

          <div class="question-actions">
            <a href="/edit/<%= details.id %>" class="edit-btn">
              <i class="fas fa-edit"></i> Edit
            </a>

            <form action="/delete/<%= details.id %>" method="POST">
              <button
                type="submit"
                class="delete-btn"
                onclick="return confirm('Delete this question?')"
              >
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </section>

    <!-- ********* TECH SECTION ********* -->
    <section class="tech">
      <h4 class="about-why">TECH STACK</h4>

      <ul class="tech-used">
        <li>
          <img src="img/Javascript.svg" /><p class="tech-p">JavaScript</p>
        </li>
        <li>
          <img src="img/HTML5.svg" /><p class="tech-p">HTML 5</p>
        </li>
        <li>
          <img src="img/CSS3.svg" /><p class="tech-p">CSS 3</p>
        </li>
        <li>
          <img src="img/Figma.svg" /><p class="tech-p">Figma</p>
        </li>
        <li>
          <img src="img/Adobe Photoshop.svg" /><p class="tech-p">Photoshop</p>
        </li>
      </ul>

      <ul class="tech-used">
        <li>
          <img src="img/Nodejs.svg" /><p class="tech-p">Node.js</p>
        </li>
        <li>
          <img src="img/MongoDB.svg" /><p class="tech-p">MongoDB</p>
        </li>
        <li>
          <img src="img/Nodemon.svg" /><p class="tech-p">Nodemon</p>
        </li>
        <li>
          <img src="img/Postman.svg" /><p class="tech-p">Postman</p>
        </li>
        <li>
          <img src="img/npm.svg" /><p class="tech-p">npm</p>
        </li>
      </ul>
    </section>

    <!-- ********* FOOTER ********* -->
    <footer>
      <section class="footer-links">
        <ul class="links">
          <a href="https://github.com/AlexandraQWZ" target="_blank">// GITHUB</a>
          <a href="//">// PORTFOLIO</a>
          <a href="//">// CONTACT</a>
        </ul>
      </section>

      <div class="footer-title">
        <a href="/">
          <img
            src="/img/footer-icon.png"
            class="footer-logo"
            alt="Fantastic Four footer logo"
          />
        </a>
      </div>
    </footer>

    <!-- JS FILES -->
    <script src="/data.js"></script>
    <script src="/main.js"></script>
  </body>
</html>
